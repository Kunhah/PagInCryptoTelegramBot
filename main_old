use chrono::{NaiveDateTime, Utc, Duration};
use dotenv::dotenv;
use sqlx::{FromRow, PgPool};
use std::env;
use teloxide::{prelude::*, types::ChatId};
use tokio::time::{sleep, Duration as TokioDuration};
use axum::{Router, routing::post, extract::Json, extract::State, http::StatusCode};
use hyper::server;
use serde::Deserialize;
use std::net::SocketAddr;
use serde_json::Value;
use std::sync::Arc;
use stripe::{Event, EventObject, Webhook};

#[derive(FromRow, Debug)]
struct Subscription {
    user_id: i64,
    expires_at: NaiveDateTime,
}

#[tokio::main]
async fn main() {
    dotenv().ok();
    let token = env::var("TELOXIDE_TOKEN").expect("Missing TELOXIDE_TOKEN");
    let group_id: i64 = env::var("GROUP_ID").expect("Missing GROUP_ID").parse().unwrap();
    let db_url = env::var("DATABASE_URL").expect("Missing DATABASE_URL");

    let pool = PgPool::connect(&db_url)
        .await
        .expect("Failed to connect to PostgreSQL");

    let bot = Bot::new(token.clone());

    println!("üöÄ Bot is running...");

    // Clone needed resources
    let pool_for_kick = pool.clone();
    let bot_for_kick = bot.clone();

    // Run periodic check task
    let kick_task = tokio::spawn(async move {
        loop {
            if let Err(e) = check_and_kick_expired(&bot_for_kick, &pool_for_kick, group_id).await {
                eprintln!("‚ö†Ô∏è Error in check loop: {}", e);
            }
            sleep(TokioDuration::from_secs(60)).await;
        }
    });

    // Run the Stripe webhook server (to be implemented)
    let stripe_task = tokio::spawn(async move {
        run_stripe_webhook_server(pool).await;
    });

    // Await both tasks
    let _ = tokio::join!(kick_task, stripe_task);
}

async fn check_and_kick_expired(
    bot: &Bot,
    pool: &PgPool,
    group_id: i64,
) -> Result<(), Box<dyn std::error::Error>> {
    //let now = Utc::now().naive_utc();

    let expired: Vec<Subscription> = sqlx::query_as!(
        Subscription,
        "SELECT user_id, expires_at FROM subscriptions WHERE expires_at < NOW()"
    )
    .fetch_all(pool)
    .await?;

    for sub in expired {
        println!("‚õî Removing expired user: {}", sub.user_id);

        // Try to kick
        match bot.ban_chat_member(ChatId(group_id), UserId(sub.user_id as u64)).await {
            Ok(_) => {
                sqlx::query!("DELETE FROM subscriptions WHERE user_id = $1", sub.user_id)
                    .execute(pool)
                    .await?;
                println!("‚úÖ User {} removed", sub.user_id);
            }
            Err(e) => {
                eprintln!("‚ö†Ô∏è Could not remove user {}: {}", sub.user_id, e);
            }
        }
    }

    Ok(())
}

#[derive(Deserialize)]
struct StripeEvent {
    #[serde(rename = "type")]
    event_type: String,
    data: serde_json::Value,
}

async fn stripe_webhook(Json(payload): Json<StripeEvent>) {
    println!("üéØ Received Stripe event: {}", payload.event_type);
    // TODO: parse and update DB
}

async fn run_stripe_webhook_server(pool: PgPool) {
    let app = Router::new()
        .route("/stripe-webhook", post(stripe_webhook));

    let addr = SocketAddr::from(([0, 0, 0, 0], 3000));
    println!("üöÄ Stripe webhook server listening on {}", addr);
    hyper::server::bind(&addr)
        .serve(app.into_make_service())
        .await
        .unwrap();
}

pub fn stripe_router(pool: Arc<PgPool>) -> Router {
    Router::new()
        .route("/stripe-webhook", post(handle_stripe_webhook))
        .with_state(pool)
}

async fn handle_stripe_webhook(
    State(pool): State<Arc<PgPool>>,
    headers: axum::http::HeaderMap,
    body: String,
) -> StatusCode {
    let stripe_secret = std::env::var("STRIPE_WEBHOOK_SECRET").expect("STRIPE_WEBHOOK_SECRET not set");

    let sig_header = headers
        .get("Stripe-Signature")
        .and_then(|v| v.to_str().ok());

    if sig_header.is_none() {
        return StatusCode::BAD_REQUEST;
    }

    // Verify webhook signature
    let event = match Webhook::construct_event(&body, sig_header.unwrap(), &stripe_secret) {
        Ok(e) => e,
        Err(_) => return StatusCode::BAD_REQUEST,
    };

    if event.type_ == "checkout.session.completed" {
        if let EventObject::CheckoutSession(session) = event.data.object {
            if let Some(metadata) = session.metadata {
                if let Some(user_id_str) = metadata.get("telegram_user_id") {
                    if let Ok(user_id) = user_id_str.parse::<i64>() {
                        let expiration = Utc::now() + Duration::days(30);

                        if let Err(err) = sqlx::query!(
                            r#"
                            INSERT INTO subscriptions (user_id, expires_at)
                            VALUES ($1, $2)
                            ON CONFLICT (user_id) DO UPDATE
                            SET expires_at = EXCLUDED.expires_at
                            "#,
                            user_id,
                            expiration.naive_utc()
                        )
                        .execute(pool.as_ref())
                        .await
                        {
                            eprintln!("‚ùå Failed to update subscription for {}: {}", user_id, err);
                        } else {
                            println!("‚úÖ Subscription updated for Telegram user {}", user_id);
                        }
                    }
                }
            }
        }
    }

    StatusCode::OK
}